@inherits LayoutComponentBase
@using LamaApp.Client.Pages.Usuario.Layout
@using LamaApp.Client.Pages.Usuario.User_Account.Components
@layout UserLayout


<div class="empty-layout w-100 h-100 p-3">

    <div class="info-cont row h-auto align-items-center justify-content-start gap-4 p-3 mb-4">
        <img src="Imagenes/Banner1.jpg" alt="Alternate Text" class="img-perfil col-auto" />
        <div class="col-auto d-flex flex-column h-auto gap-4">
            <div>
                <h2 class="fw-bold">Nombre completo</h2>
                <span>@@Username</span>
            </div>
            <div class="d-flex justify-content-start align-items-center gap-5">
                <span class="texto-rol px-3 py-2 rounded-3 border fw-bold">Capitan</span>
                <span class="texto-rol px-3 py-2 rounded-3 border">Medellin</span>
            </div>
        </div>
        <div class="col-auto h-auto flex-grow-1 d-flex justify-content-end">
            <button class=" btn btn-dark"><i class="fa-solid fa-comment"></i></button>
        </div>
    
    </div>
    <div class="container h-100 w-auto p-0 d-flex flex-column align-items-center">
        @Body
    </div>
</div>
<style>

    .img-perfil{
        width :150px;
        height : 150px;
        object-fit : cover;
        object-position : center;   
        border-radius : 50%;
    }

    .texto-rol{
        background-color : #ddd;
        box-shadow : 0 0 1px 1px #ddd;
    }
</style>

