<div class="card text-bg-dark" @onclick="OnCardClick">
    <div class="card-img-overlay text-light">
        <div class="text-cont position-absolute z-1">
            <h5 class="card-title">@Titulo</h5>
            <p class="fs-6">@Fecha | @Ubicacion</p>
            <p class="card-text">@Descripcion</p>
            <p class="card-text text-secondary"><small>Recomendado para ti</small></p>
        </div>
    </div>
</div>
<style>

    .text-cont{
        bottom : 1em
    }

    .card {
        position: relative;
        background-image : url("Imagenes/Banner1.jpg")
    }

    .card:after{
        content : "";
        position: absolute;
        width : 100%;
        height : 100%;
        background: rgb(2,0,36);
        background: linear-gradient(0deg, rgba(2,0,36,1) 19%, rgba(9,9,121,0) 100%);
     }

    .card{
        cursor : pointer;
    }

    .card:hover {
        transform : scale(1.03);
        transition : .5s;
    }

</style>

@code {

    [Parameter]
    public string Titulo { get; set; }

    [Parameter]
    public string Fecha { get; set; }

    [Parameter]
    public string Ubicacion { get; set; }

    [Parameter]
    public string Descripcion { get; set; }

    [Parameter] public EventCallback OnCardClick { get; set; }


}
